<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/item_integration_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布动态"
                android:textColor="@color/font_title_main"
                android:textSize="@dimen/font_title_main"/>
            <TextView
                android:id="@+id/item_integration_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-05"
                android:layout_marginTop="3dp"
                android:textColor="@color/font_time_gray"
                android:textSize="@dimen/font_time_main"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_integration_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textColor="@color/font_title_main"
                android:textSize="@dimen/font_title_main"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>