<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/divider_line_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_load_ing"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_content_main"
            android:textColor="@color/font_content_gray"
            android:text="在线留言"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-08"
        android:textSize="@dimen/font_time_main"
        android:layout_margin="10dp"/>
    <include layout="@layout/divider_line_one"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_load_ing"/>
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_content_main"
            android:textColor="@color/font_content_gray"
            android:text="在线留言"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-08"
        android:textSize="@dimen/font_time_main"
        android:layout_margin="10dp"/>
</LinearLayout>