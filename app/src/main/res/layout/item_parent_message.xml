<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <cn.xiaocool.hongyunschool.view.RoundImageView
            android:id="@+id/item_sn_head_iv"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_sn_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_nick_name"
                android:textSize="@dimen/font_nick_name"
                android:gravity="center_vertical"
                android:text="家长"
                android:paddingLeft="5dp"/>


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/item_sn_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_time_gray"
                android:textSize="@dimen/font_time_main"
                android:text="2014-10-25"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_parent_send"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_boder_white"
                android:text="回复"
                android:textColor="@color/themeColor"
                android:textSize="14dp" />
        </RelativeLayout>


    </LinearLayout>

    <include layout="@layout/divider_line_half"/>

    <RelativeLayout
        android:id="@+id/tecxt_homwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_sn_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myhomework_title"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:text="由于今天天气原因"
            android:textColor="@color/font_content_gray"
            android:textSize="@dimen/font_content_main" />


    </RelativeLayout>


    <include layout="@layout/divider_line_half" />

    <RelativeLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_layout"
        android:background="@color/white"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#E3E1E3"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teacher_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_load_ing"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/teacher_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校长"
                        android:textColor="@color/font_nick_name"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/teacher_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014-10-25"
                        android:textSize="@dimen/font_time_minor"
                        android:textColor="@color/font_time_gray"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/teacher_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好"
                    android:textColor="@color/font_comment_gray"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>


    <include layout="@layout/divider_line_10" />

</LinearLayout>