<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_schoolintrouce">
            <ImageView
                android:id="@+id/btn_website"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/xuexiaogaikuang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="学校概况"
                android:layout_below="@+id/btn_website"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_teacher_style">
            <ImageView
                android:id="@+id/btn_files"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jiaoshifengcai"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="教师风采"
                android:layout_below="@+id/btn_files"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_student_show">
            <ImageView
                android:id="@+id/btn_confirm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/xueshengxiucang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="学生秀场"
                android:layout_below="@+id/btn_confirm"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </LinearLayout>


    <include layout="@layout/divider_line_half"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_five_public">
            <ImageView
                android:id="@+id/btn_website2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/wukaizhuanglan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="五公开专栏"
                android:layout_below="@+id/btn_website2"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_exciting_event">
            <ImageView
                android:id="@+id/btn_files2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jingcaihuodong"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="精彩活动"
                android:layout_below="@+id/btn_files2"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_parent_message">
            <ImageView
                android:id="@+id/btn_confirm2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jiazhangxinxiang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="家长信箱"
                android:layout_below="@+id/btn_confirm2"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
